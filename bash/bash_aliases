# Push and pop directories on directory stack
alias pu='pushd'
alias po='popd'

#alias ls='ls --color=auto'
alias ls='ls -G'
alias ll='ls -alF'
alias la='ls -Al'
alias l='ls -AlCF'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'


alias reload='source ~/.bashrc'
alias c='clear'
alias ="clear"
alias h='history'
alias -- -='cd -'
alias gsed='sed'


# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"



# use GNU sed instead of FreeBSD
# not needed as I renamed the sed command directly
alias sed='gsed'

# Super user
alias _='sudo'

function take {
	mkdir -p $1 && cd $1
}

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias cd..='cd ..' # common typo...

# git aliases
alias g='git status'
alias go='git checkout'
alias gg='git commit'
alias gca='git commit --amend'
alias gc='git commit -m'
alias gd='git diff'
alias gs='git stash'
alias ga='git stash apply'
alias gn='git mv -f'
alias gf='git fetch'
alias gp='git push'
alias gm='git checkout master'
alias gl='git log'
alias gpo='git push -u origin'
alias gmm='git merge origin/master'
alias grm='git rebase origin/master'
alias gap='git add -p'
alias gai='git add -i'
alias gl1='git log --pretty="oneline"'
alias grma='git ls-files --deleted | xargs git rm'
alias gsr='git svn rebase'
alias gsd='git svn dcommit'
alias gsi='git svn info'
alias gsdd='git svn dcommit --dry-run'
alias gsf='git svn fetch'
alias gob='git checkout -b'

